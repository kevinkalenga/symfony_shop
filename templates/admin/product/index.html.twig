{% extends 'admin/base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
  <div class="min-h-screen bg-gradient-to-br from-blue-100 via-green-100 to-white py-12 px-4 sm:px-6 lg:px-8">
     <div class="max-w-6xl mx-auto bg-white shadow-xl rounded-3xl p-8 sm:p-10 border border-blue-100">
        <div class="flex items-center justify-between mb-6">
          <h1 class="text-4xl font-extrabold ext-blue-900 flex items-center gap-2">
            <span>Product List</span>
          </h1>
          <a href="" class="inline-flex items-center 
           px-4 py-2 bg-blue-600 text-white text-sm
            font-medium rounded-xl shadow hover:bg-blue-700 transition">
             Add New Product
          </a>
        </div>
        <div class="overflow-x-auto rounded-xl border border-gray-200 mt-10">
          <table class="w-full bg-white text-sm text-left">
            <thead class="bg-blue-100 text-blue-800 uppercase text-xs font-semibold tracking-wide">
              <tr>
                <th class="py-4 px-6">#</th>
                <th class="py-4 px-6">Image</th>
                <th class="py-4 px-6">Name</th>
                <th class="py-4 px-6">Category</th>
                <th class="py-4 px-6">Price</th>
                <th class="py-4 px-6">Actions</th>
              </tr>
               
            </thead>
            <tbody class="divide-y divide-white-100 text-gray-700">
            </tbody>
          </table>
        </div>
     </div>
  </div>
{% endblock %}
